{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "types": ["node", "jest"],

    "sourceMap": true,
    "declaration": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/test/**"]
}
