{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "sourceMap": false,
    "declaration": false,
    "types": ["node"]
  },
  "include": ["src/cli/**/*", "src/utils/**/*", "src/index.ts"],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/api",
    "src/controllers",
    "src/db",
    "src/core",
    "src/services",
    "src/config"
  ]
}
