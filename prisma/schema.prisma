generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int          @id @default(autoincrement())
  email     String?      @unique
  createdAt DateTime     @default(now())
  githubId  String       @unique
  username  String
  teams     TeamMember[]
  commits   Commit[]
  invitesSent Invite[] @relation("InvitesSent")
}

model Team {
  id        Int          @id @default(autoincrement())
  name      String
  createdAt DateTime     @default(now())
  repos     Repo[]
  members   TeamMember[]
  invites   Invite[]
}

model TeamMember {
  id     Int @id @default(autoincrement())
  userId Int
  teamId Int

  lastActiveAt   DateTime?
  activityStatus ActivityStatus @default(INACTIVE)

  team Team @relation(fields: [teamId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([userId, teamId])
}

enum ActivityStatus {
  ACTIVE
  INACTIVE
  DORMANT
}

model Repo {
  id        Int      @id @default(autoincrement())
  name      String
  fullName  String   @unique
  githubId  Int      @unique
  stars     Int
  forks     Int
  private   Boolean
  language  String?
  teamId    Int
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  commits   Commit[]
  createdAt DateTime @default(now())
}

model Commit {
  id        Int      @id @default(autoincrement())
  message   String
  sha       String   @unique
  repoId    Int
  authorId  Int?
  createdAt DateTime @default(now())

  repo   Repo  @relation(fields: [repoId], references: [id])
  author User? @relation(fields: [authorId], references: [id])

  @@index([authorId, createdAt])
}

model Invite {
  id        Int      @id @default(autoincrement())
  code      String   @unique @default(cuid())
  teamId    Int
  invitedBy Int
  invitedUser String?
  status    InviteStatus @default(PENDING)
  createdAt DateTime @default(now())
  expiresAt DateTime @default(dbgenerated("CURRENT_TIMESTAMP + interval '7 days'"))
  acceptedAt DateTime?

  team    Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  inviter User @relation("InvitesSent", fields: [invitedBy], references: [id])

  @@index([teamId, status])
  @@index([code])
}

enum InviteStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
}
